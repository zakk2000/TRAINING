<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	
	<definition name="login/login" extends="login.definition">
		
		<put-attribute name="body" value="/WEB-INF/views/login/login.jsp" />
	
    </definition>
    
    <definition name="popup/*" extends="popup.definition">
		
		<put-attribute name="body" value="/WEB-INF/views/popup/{1}.jsp" />
	
    </definition>
    
    <definition name="*/*" extends="base.definition">
		
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	
    </definition>

</tiles-definitions>
